{
  "extends": [
    "next/core-web-vitals",
    "./__config__/eslint",
    "prettier",
    "plugin:storybook/recommended"
  ],
  "overrides": [
    {
      "files": ["*.stories.ts", "*.stories.tsx"],
      "rules": {
        "react-hooks/rules-of-hooks": "off",
        "no-magic-numbers": "off"
      }
    },
    {
      "files": "scripts/*.js",
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
